<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="getTask">

    <TextView
        android:id="@+id/task_text"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginTop="-3dp"
        android:background="@color/colorAccent"
        android:fontFamily="casual"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:fontFamily="casual"
        android:onClick="onCheckboxClicked"
        android:textStyle="bold"
        app:buttonTint="@android:color/black"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="@+id/task_text"
        app:layout_constraintTop_toTopOf="@+id/task_text"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/task_text"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.5" />

</android.support.constraint.ConstraintLayout>